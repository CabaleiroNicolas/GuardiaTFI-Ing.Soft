{{! registrar-ingreso.hbs }}

<div class="form-container">

    {{#if mensajeExito}}
        <div class="alert alert-success">
            {{mensajeExito}}
        </div>
    {{/if}}

    {{#if mensajeError}}
        <div class="alert alert-error">
            {{mensajeError}}
        </div>
    {{/if}}

    <h1>Registrar ingreso</h1>

    <form action="/urgencias/registrar" method="POST">
        <div class="form-grid">

            <div>
                <label for="cuil">CUIL del paciente</label>
                <input type="text" name="cuil" id="cuil" required placeholder="ej: 20-1234567-1">
            </div>

            <div>
                <label for="temperatura">Temperatura (°C)</label>
                <input type="number" name="temperatura" id="temperatura" step="0.1" required>
            </div>

            <div>
                <label for="frecCardiaca">Frecuencia cardíaca</label>
                <input type="number" name="frecCardiaca" id="frecCardiaca" required>
            </div>

            <div>
                <label for="frecRespiratoria">Frecuencia respiratoria</label>
                <input type="number" name="frecRespiratoria" id="frecRespiratoria" required>
            </div>

            <div>
                <label for="tensionArterial">TA (Sistólica/Diastólica)</label>
                <input type="text" name="tensionArterial" id="tensionArterial" placeholder="120/80" required>
            </div>

            <div>
                <label for="nivelEmergencia">Nivel de emergencia</label>
                <select name="nivelEmergencia" id="nivelEmergencia" required>
                    {{#each niveles}}
                        <option value="{{this.value}}">{{this.descripcion}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="grid-full">
                <label for="informe">Informe</label>
                <textarea name="informe" id="informe" required></textarea>
            </div>

        </div>

        <button type="submit">Registrar ingreso</button>
    </form>
</div>
